{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["app.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
